@model Models.Contact

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<br />



<h1>Create New Contact</h1>

 <hr />


 <body class="bg">
<div class="d">
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Firstname" class="l"></label>
                <input asp-for="Firstname" class="form-control t" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="l"></label>
                <input asp-for="Lastname" class="form-control t" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="l"></label>
                <input asp-for="Phone" class="form-control t" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="l"></label>
                <input asp-for="Email" class="form-control t" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="l"></label>
                <input asp-for="Address" class="form-control t" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <br /> <br />
            <div class="form-group">
                <input type="submit" value="Create" class="bt" />
            </div>
        </form>
    </div>
</div>
<br />
<div class="bd">
    <a asp-action="Index" >Back to List</a>
</div>
</body>
